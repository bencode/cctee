FROM rust:1.75-slim AS builder
WORKDIR /build
COPY Cargo.toml Cargo.lock ./
COPY cctee-common ./cctee-common
COPY cctee-server ./cctee-server
COPY cctee ./cctee
RUN cargo build --release -p cctee-server

FROM debian:bookworm-slim
RUN apt-get update && apt-get install -y ca-certificates && rm -rf /var/lib/apt/lists/*
WORKDIR /app
COPY --from=builder /build/target/release/cctee-server ./
ENV PORT=4111
EXPOSE 4111
CMD ["./cctee-server"]
